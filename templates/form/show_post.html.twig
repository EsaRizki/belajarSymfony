{% extends 'base.html.twig' %}

{% block title %}Show Post{% endblock %}

{% block body %}
	<div class="container">
		<div class="col-md-10">
			<div class="card">
				<div class="card-header">Show Post</div>
				<div class="card-body">
					<strong>Post title: </strong> {{post.title}}
					<br><strong>Post description :</strong> {{post.description}}
					<br><strong>Post Category :</strong> {{post.category}}
				</div>
			</div>
			
		</div>
	</div>
{% endblock %}
